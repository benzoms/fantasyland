/* Number text (1/3 etc) */
.numbertext {
    text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
font-family: "Prompt", sans-serif;
  font-weight: 500;
  font-style: normal;
  color: #f2f2f2;
  font-size: 20px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

.prev, .next {
  transform: translateX(-50px);
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  padding: 16px;
  margin-top: -22px;
  color: white;
  font-weight: bold;
  font-size: 30px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}
.prev {
  transform: translateX(-50px);
}
.next {
  right: 0;
  border-radius: 3px 0 0 3px;
  transform: translateX(50px);
}

.dot {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dot:hover {
  background-color: #717171;
}

/* Fading animation */
.fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}
.speech-bubble {
    bottom: 450px;
	position: absolute;
	background: rgba(255,255,255,0.8);
	border-radius: .4em;
    width:80vw;
    transform: translate(-25%, 0%);
}
#frogaskform{
    position: absolute;
    animation: none;
    
    bottom:10svh;
    transform: translate(-50%, 0%);
}
#frogaskform input{
    font-size: 30px;
}
.speech-bubble:after {
	content: '';
	position: absolute;
	bottom: 0;
	left: 50%;
	width: 0;
	height: 0;
	border: 20px solid transparent;
	border-top-color: rgba(255,255,255,0.8);
	border-bottom: 0;
	border-left: 0;
	margin-left: -10px;
	margin-bottom: -20px;
}

.speech-bubble h2{
    margin: 15px;
}
#wizardfrog h2 {
